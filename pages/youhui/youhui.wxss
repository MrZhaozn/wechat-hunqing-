/* pages/youhui/youhui.wxss */
#youhui{
  display: flex;
  width: 750rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 23rpx;
}
#youhui .one{
  width: 50%;
  height: 98rpx;
  border-bottom: 2rpx solid lavender;
}
#youhui .hover{
  background: rgb(221, 221, 156);
  border-bottom: 2rpx solid rgb(247, 128, 128);
}
.main{
  width: 750rpx;
  background: rgb(240,239,245);
  padding: 15rpx 0;
  height: 1080rpx;
}
.main_item{
  width: 706rpx;
  height: 190rpx;
  margin: 7rpx auto;
  position: relative;
}
.main_item image{
  width: 100%;
  height: 100%;
}
.can_text{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.fixed{
  width: 750rpx;
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  background: rgba(240,239,245,0.3);
}
.fixed>view{
  width: 570rpx;
  height: 420rpx;
  background: rgb(213,190,140);
  position: fixed;
  top: 40%;
  margin-top:-250rpx; 
  left: 50rpx;
  padding: 40rpx;
  overflow: hidden;
  color: white;
}
.juanma{
  font-size: 30rpx;
}
.num{
  position: absolute;
  top: 30%;
  left: 0;
  width: 100%;
  text-align: center;
  font-size: 50rpx;
  font-weight: 500;
}
.tips{
  font-size: 25rpx;
  position: absolute;
  bottom: 30rpx;
  left: 40rpx;
  width: 570rpx;
}
.aikes{
  position: absolute;
  top: 5rpx;
  right: 20rpx;

}